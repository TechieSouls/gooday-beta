<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_signin_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/signin_back_arrow"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/signup_step1_back_arrow"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="back"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >

            <ImageView
                android:id="@+id/iv_bug_report"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/instabug_report"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="25dp"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_header"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="70dp"
        android:id="@+id/ll_login_form">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@drawable/about_us_logo"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:hint="EMAIL ADDRESS"
            android:padding="10dp"
            android:textColorHint="#80E97C44"
            android:textColor="@color/cenes_textfield_color"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:background="@drawable/bg_trans_border_radius"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="PASSWORD"
            android:padding="10dp"
            android:textColorHint="#80E97C44"
            android:textColor="@color/cenes_textfield_color"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:background="@drawable/bg_trans_border_radius"/>

        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Forgot Password?"
            android:layout_marginTop="10dp"
            android:padding="2dp"
            android:textSize="14sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/signin_rounded_login_btn"
            android:text="Log In"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>