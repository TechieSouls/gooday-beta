<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            >
            <ImageView
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/about_us_logo"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <Button
                        android:id="@+id/bt_signup_mobile"
                        android:layout_width="330dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_trans_border_radius"
                        android:text="Sign Up with Mobile Number"
                        android:textColor="@color/cenes_mcv_orange"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_centerHorizontal="true"
                        android:textAlignment="center"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_tandc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />

                <RelativeLayout
                    android:id="@+id/rl_already_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="60dp">

                    <Button
                        android:id="@+id/bt_already_login"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/transparent"
                        android:textColor="@color/cenes_mcv_orange"
                        android:text="Already Have an Account? Log In"
                        android:textSize="16sp"/>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
