<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <ImageView
            android:id="@+id/iv_bug_report"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/instabug_report"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="25dp"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="Phone Verification"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <RelativeLayout
                        android:id="@+id/rl_choose_country_list"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="30dp">

                        <TextView
                            android:id="@+id/tv_country_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select Country"
                            android:textColor="@color/link_color"
                            android:textSize="15dp"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/forward_grey_double_arrow"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_phone_country_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="+00"
                        android:textSize="15dp"/>
                    <EditText
                        android:id="@+id/et_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="(XXX) XXX-XXX"
                        android:inputType="phone"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:background="@color/transparent"
                        android:textSize="15dp"
                        android:imeOptions="actionDone"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_temrs_and_conds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="By verifying phone number"
            android:textAlignment="center"
            />
        <RelativeLayout
            android:id="@+id/rl_phone_verification_step1_continue"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:textColor="@color/cenes_mcv_orange"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:background="@color/button_disable_color"
            >
            <Button
                android:id="@+id/btn_phone_verification_step1_continue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Access"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:background="@color/transparent"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
