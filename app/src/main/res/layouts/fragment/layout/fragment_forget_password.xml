<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_back_button"
        android:layout_width="20dp"
        android:layout_height="28dp"
        android:padding="5dp"
        android:src="@drawable/abondan_event_icon"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"/>

    <LinearLayout
        android:id="@+id/ll_forgetpassowrd_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_header"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:gravity="center">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:src="@drawable/about_us_logo"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/et_fp_email"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="3"
            android:textSize="16sp"
            android:hint="Email"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/cenes_textfield_color"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:background="@color/transparent"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"/>
        <View
            android:id="@+id/view_name_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/xml_gradient_multicolors"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/light_link_color">

        <Button
            android:id="@+id/bt_fp_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </RelativeLayout>
</RelativeLayout>
