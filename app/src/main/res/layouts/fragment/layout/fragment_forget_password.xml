<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_signin_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/signin_back_arrow"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:src="@drawable/signup_step1_back_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="back"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >

            <ImageView
                android:id="@+id/iv_bug_report"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/instabug_report"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="25dp"/>
        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_forgetpassowrd_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_header"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:gravity="center">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@drawable/about_us_logo"/>

        <EditText
            android:id="@+id/et_fp_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/bg_trans_border_radius"
            android:hint="RESET BY EMAIL"
            android:textColor="@color/cenes_textfield_color"
            android:textColorHint="#80E97C44"
            android:textAlignment="center"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/bt_fp_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/signin_rounded_login_btn"
            android:text="Reset"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_login_back_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/fp_knoyourpassword"
            android:layout_marginTop="15dp"
            android:padding="2dp"
            android:gravity="center"
            />
    </LinearLayout>
</RelativeLayout>
