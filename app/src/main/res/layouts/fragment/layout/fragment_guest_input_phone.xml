<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="38dp"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_country_code_dropdown"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="#992C80D8">
                        <TextView
                            android:id="@+id/tv_dropdown_country_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+00"
                            android:textColor="@color/white"
                            android:textSize="16sp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/signup_step1_traingle"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="0dp"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Phone Number"
                        android:textColorHint="#992C80D8"
                        android:inputType="phone"
                        android:paddingLeft="10dp"
                        android:textColor="@color/white"
                        android:background="@drawable/signup_step1_et_border_radius"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/signupStep1Text"
                    android:textAlignment="center"
                    android:textColor="#FF9B9B9B"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"
                    />


            </LinearLayout>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140dp">

        <Button
            android:id="@+id/bt_signup_step1_continue"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:background="@drawable/signup_step1_btn_border"
            android:text="Continue"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/bt_already_login"
            android:layout_below="@+id/bt_signup_step1_continue"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="60px"
            android:background="@color/transparent"
            android:textColor="@color/cenes_mcv_orange"/>

    </RelativeLayout>
</RelativeLayout>
