<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/guest_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:id="@+id/ll_signup_step1_back"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:gravity="center">
            <ImageView
                android:layout_height="12dp"
                android:layout_width="20dp"
                android:src="@drawable/signup_step1_back_arrow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="back"
                android:textSize="14sp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_country_code_dropdown"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="#26FFFFFF">
                <TextView
                    android:id="@+id/tv_dropdown_country_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+00"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/signup_step1_traingle"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"/>
            </LinearLayout>

            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Phone Number"
                android:textColorHint="@color/white"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:background="@drawable/signup_step1_et_border_radius"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/signupStep1Text"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            />
        <Button
            android:id="@+id/bt_signup_step1_continue"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/signup_step1_btn_border"
            android:text="Continue"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <Button
            android:id="@+id/bt_already_login"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/transparent"
            android:textColor="@color/white"/>

    </RelativeLayout>
</RelativeLayout>
