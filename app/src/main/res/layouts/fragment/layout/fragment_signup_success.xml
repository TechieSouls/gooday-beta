<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/theme_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <ImageView
                android:id="@+id/iv_report_instabug"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/instabug_report"
                android:layout_marginLeft="30dp"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"/>
            <ImageView
                android:id="@+id/iv_profile_forward_grey"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/profile_forward_grey"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/rl_header"
            android:id="@+id/avatar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/xml_circle_light_grey_white_border"
            android:layout_marginTop="10dp">

            <com.cenesbeta.util.RoundedImageView
                android:id="@+id/riv_profile_rounded_img"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_centerInParent="true"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/iv_default_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/image_white_default" />

            <RelativeLayout
                android:id="@+id/tv_sync_with_fb"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/xml_circle_dark_grey_white_border">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/facebook_icon_unselected" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rv_signup_form_fields"
            android:layout_below="@id/avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="270dp"
                        android:layout_height="350dp"
                        android:src="@drawable/signup_success__gradient_background"
                        android:layout_marginTop="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@color/white"
                        android:layout_marginRight="60dp"
                        android:layout_marginLeft="20dp"
                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="30dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/et_signup_success_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_weight="3"
                                    android:textSize="16sp"
                                    android:hint="Name"
                                    android:textAlignment="center"
                                    android:gravity="center"
                                    android:layout_marginRight="10dp"
                                    android:textColor="@color/cenes_textfield_color"
                                    android:background="@drawable/xml_curved_corner_lightgrey_border"
                                    android:singleLine="true"
                                    android:imeOptions="actionNext"/>

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/signup_success_name_icon" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:layout_marginTop="18dp">

                                <EditText
                                    android:id="@+id/et_signup_success_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_weight="3"
                                    android:hint="Email"
                                    android:textSize="16sp"
                                    android:textAlignment="center"
                                    android:gravity="center"
                                    android:layout_marginRight="10dp"
                                    android:textColor="@color/cenes_textfield_color"
                                    android:background="@drawable/xml_curved_corner_lightgrey_border"
                                    android:singleLine="true"
                                    android:imeOptions="actionNext"
                                    />

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/signup_success_email_icon" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:layout_marginTop="18dp">

                                <EditText
                                    android:id="@+id/et_signup_success_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_weight="3"
                                    android:hint="Password"
                                    android:textSize="16sp"
                                    android:textAlignment="center"
                                    android:gravity="center"
                                    android:layout_marginRight="10dp"
                                    android:inputType="textPassword"
                                    android:textColor="@color/cenes_textfield_color"
                                    android:background="@drawable/xml_curved_corner_lightgrey_border"
                                    android:singleLine="true"/>

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/signup_success_password_icon" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:layout_marginTop="18dp">

                                <TextView
                                    android:id="@+id/et_signup_success_birthday"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_weight="3"
                                    android:hint="Birthday"
                                    android:textSize="16sp"
                                    android:textAlignment="center"
                                    android:gravity="center"
                                    android:layout_marginRight="10dp"
                                    android:textColor="@color/cenes_textfield_color"
                                    android:background="@drawable/xml_curved_corner_lightgrey_border"
                                    />

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/signup_success_birthday_icon" />
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="18dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_centerInParent="true">

                                    <Button
                                        android:id="@+id/btn_male"
                                        android:layout_width="wrap_content"
                                        android:layout_height="35dp"
                                        android:text="Male"
                                        android:background="@drawable/xml_curved_corner_lightgrey_border"
                                        android:layout_marginRight="10dp"
                                        android:textColor="#FFD8D8D8"/>

                                    <Button
                                        android:id="@+id/btn_female"
                                        android:layout_width="wrap_content"
                                        android:layout_height="35dp"
                                        android:text="Female"
                                        android:background="@drawable/xml_curved_corner_lightgrey_border"
                                        android:textColor="#FFD8D8D8"/>

                                    <com.facebook.login.widget.LoginButton
                                        android:id="@+id/bt_fb_join"
                                        android:layout_width="300dp"
                                        android:layout_height="wrap_content"
                                        android:layout_above="@+id/ll_mid"
                                        android:background="@color/cenes_blue"
                                        android:text="JOIN US WITH FACEBOOK"
                                        android:textColor="@color/white"
                                        android:visibility="gone" />
                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>
                    </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

</ScrollView>
