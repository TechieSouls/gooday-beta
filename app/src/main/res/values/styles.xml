<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/MyButtonStyle</item>
    </style>

    <style name="MyButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Base application theme. -->

    <style name="TextAppearance.MaterialCalendarWidget.Header" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/cenes_teal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.MaterialCalendarWidget.Header.Orange" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/cenes_new_orange</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.MaterialCalendarWidget.Date" parent="android:TextAppearance.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/cenes_dark_gray</item>
    </style>

    <style name="TextAppearance.MaterialCalendarWidget.WeekDay" parent="android:TextAppearance.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/cenes_dark_gray</item>
    </style>

    <style name="TextAppearance.MaterialCalendarWidget.WeekDay.Orange" parent="android:TextAppearance.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/cenes_new_orange</item>
    </style>

    <style name="keyboard_button">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_margin">2dp</item>
    </style>
</resources>
