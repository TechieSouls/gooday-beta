<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/MyButtonStyle</item>

        <item name="android:fontFamily">@font/avenir_book</item>
        <item name="fontFamily">@font/avenir_book</item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->

    </style>

    <style name="MyButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Base application theme. -->

    <style name="TextAppearance.MaterialCalendarWidget.Header" parent="android:TextAppearance.Small">
        <item name="android:textColor">#595757</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.MaterialCalendarWidget.Header.Orange" parent="android:TextAppearance.Small">
        <item name="android:textColor">#595757</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.MaterialCalendarWidget.Header.DarkGrey" parent="android:TextAppearance.Small">
        <item name="android:textColor">#595757</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.MaterialCalendarWidget.Header.Large.DarkGrey" parent="android:TextAppearance.Large">
        <item name="android:textColor">#595757</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="TextAppearance.MaterialCalendarWidget.Date" parent="android:TextAppearance.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MaterialCalendarWidget.WeekDay" parent="android:TextAppearance.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#595757</item>
    </style>

    <style name="TextAppearance.MaterialCalendarWidget.WeekDay.Orange" parent="android:TextAppearance.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#595757</item>
    </style>
    <style name="TextAppearance.MaterialCalendarWidget.WeekDay.DarkGrey" parent="android:TextAppearance.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#595757</item>
    </style>
    <style name="TextAppearance.MaterialCalendarWidget.WeekDay.Large.DarkGrey" parent="android:TextAppearance.Large">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#595757</item>
    </style>

    <style name="keyboard_button">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_margin">2dp</item>
    </style>
</resources>
