<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Cancel"
            android:textSize="17sp"
            android:textColor="@color/cenes_light_blue"
            android:background="@color/transparent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/avenir_medium"
            />

        <Button
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Done"
            android:textSize="17dp"
            android:textColor="@color/cenes_light_blue"
            android:background="@color/transparent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/avenir_medium"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_textarea_layout"
        android:layout_below="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_message_area"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15dp"
            android:gravity="top"
            android:padding="5dp"
            android:background="@android:color/transparent"
            android:maxLength="150"
            android:fontFamily="@font/avenir_medium"
            />
        <TextView
            android:id="@+id/tv_characters_count"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:text="150 Characters Remain"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/avenir_book"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_empty_space_tap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_textarea_layout"
        android:focusable="true"
        android:focusableInTouchMode="true"/>
</RelativeLayout>
