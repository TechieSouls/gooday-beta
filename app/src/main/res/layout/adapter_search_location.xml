<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_location_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/location_icon_with_shadow"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="2dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/ll_loc_title_add"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/loc_title"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="Chandigarh"
                    android:fontFamily="@font/avenir_medium"/>

                <TextView
                    android:id="@+id/loc_add"
                    android:textColor="@color/cenes_dark_gray"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:text="Chandigarh"
                    android:maxLines="1"
                    android:fontFamily="@font/avenir_medium"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_distance"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="300Km"
                android:textColor="#0096FF"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:gravity="right"
                android:fontFamily="@font/avenir_medium"
                ></TextView>


        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_below="@+id/rl_location_list_item"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ccc"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="5dp"
        />
</RelativeLayout>
