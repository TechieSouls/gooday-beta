<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="337dp"
        android:layout_height="254dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@drawable/xml_curved_white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update App"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#595757"
            android:gravity="center"></TextView>

        <TextView
            android:layout_marginTop="18dp"
            android:textSize="18dp"
            android:textColor="#898989"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alert_update_message"
            android:gravity="center_horizontal"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            ></TextView>

        <Button
            android:background="@drawable/xml_circle_white_orange_border"
            android:textSize="16dp"
            android:textColor="@color/cenes_mcv_orange"
            android:layout_width="174dp"
            android:layout_height="44dp"
            android:textAlignment="center"
            android:text="Visit Play Store"
            android:layout_marginTop="25dp"></Button>

    </LinearLayout>

</RelativeLayout>
