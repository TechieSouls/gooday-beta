<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_picture_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivAttachment"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/rl_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_icon" />

    <com.deploy.util.CenesTextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivAttachment"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:padding="25dp"
        android:text="Complete your profile so your\nfriends can recognize you"
        app:fontName="@string/font_lato_regular" />

    <com.deploy.util.CenesButton
        android:id="@+id/bt_takepicture"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@drawable/rounded_red_solid"
        android:text="TAKE PICTURE"
        android:textColor="@color/white"
        app:fontName="@string/font_lato_regular" />

    <com.deploy.util.CenesButton
        android:id="@+id/bt_selectpicture"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bt_takepicture"
        android:layout_below="@+id/bt_takepicture"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_red_solid"
        android:text="SELECT PICTURE"
        android:textColor="@color/white"
        app:fontName="@string/font_lato_regular" />

</RelativeLayout>