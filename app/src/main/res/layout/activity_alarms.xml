<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/alarm_default"
    >

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient_header"
        android:visibility="gone">

        <com.deploy.util.RoundedImageView
            android:id="@+id/user_profile_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <com.deploy.util.CenesTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Alarms"
            android:textColor="@color/white"
            android:textSize="18dp" />


        <!--<com.cenes.util.CenesTextView
            android:id="@+id/delete_alarm_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="Delete"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone"
            app:fontName="@string/font_lato_regular" />-->

        <ImageView
            android:id="@+id/delete_alarm_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/add_alarm_btn"
            android:padding="7dp"
            android:src="@drawable/ic_delete_white" />

        <ImageView
            android:id="@+id/add_alarm_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:src="@drawable/add_item_icon" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <com.deploy.util.CenesTextView
            android:id="@+id/tv_no_alarms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="No Alarms Set"
            android:textColor="@color/black"
            android:visibility="gone"
            app:fontName="@string/font_lato_regular" />

        <ListView
            android:id="@+id/lv_alarms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>