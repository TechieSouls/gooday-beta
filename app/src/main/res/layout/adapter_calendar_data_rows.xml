<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_reminder_row_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.cenesbeta.util.CenesTextView
            android:id="@+id/tv_reminder_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="3"
            android:drawableStart="@drawable/solid_circle_orange"
            android:drawablePadding="10dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:padding="10dp"
            android:textColor="@color/cenes_dark_gray"
            android:textSize="17sp"
            app:fontName="@string/font_lato_regular" />

        <com.cenesbeta.util.CenesTextView
            android:id="@+id/tv_reminder_time"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/cenes_dark_gray"
            app:fontName="@string/font_lato_regular" />

    </LinearLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:background="@color/cenes_very_light_gray" />

    <com.daimajia.swipe.SwipeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:tag="Bottom2"
            android:visibility="gone">

            <TextView
                android:id="@+id/trash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_decline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Decline"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/gathering_row_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_cenes_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/transparent"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/host_gradient_circle_small"
                        android:padding="2.8dp">

                        <com.cenesbeta.util.RoundedImageView
                            android:id="@+id/iv_event_host"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/profile_pic_no_image" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:id="@+id/ll_event_location_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="11dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/location_on_icon" />

                        <com.cenesbeta.util.CenesTextView
                            android:id="@+id/tv_event_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="Seahawks at Rams"
                            android:textColor="#FF9B9B9B"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <com.cenesbeta.util.CenesTextView
                        android:id="@+id/tv_event_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="Seahawks at Rams"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="1:25PM" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_tp_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/transparent"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/xml_circle_light_grey"
                        android:padding="3dp">

                        <com.cenesbeta.util.RoundedImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.cenesbeta.util.CenesTextView
                        android:id="@+id/tv_tp_event_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="Seahawks at Rams"
                        android:textColor="#FF9B9B9B"
                        android:textSize="16sp" />

                    <com.cenesbeta.util.CenesTextView
                        android:id="@+id/tv_tp_source"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:lines="1"
                        android:text="Outlook"
                        android:textColor="#FF9B9B9B"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_tp_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="1:25PM" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_holiday"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_holiday_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@color/transparent"
                    android:gravity="left|center_vertical"
                    android:text="Veterans Day Veterans Day Veterans Day Veterans Day"
                    android:textColor="@color/cenes_pink"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>



            <View
                android:id="@+id/event_bar"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="2dp"
                android:background="@color/cenes_new_orange"
                android:visibility="gone" />

        </LinearLayout>
    </com.daimajia.swipe.SwipeLayout>

    <RelativeLayout
        android:id="@+id/rl_month_separator"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/light_tint_gray">

        <TextView
            android:id="@+id/tv_month_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="January"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>
