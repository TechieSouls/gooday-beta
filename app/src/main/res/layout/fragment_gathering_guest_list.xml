<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/lv_guest_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:divider="@color/transparent"></ListView>
    
    <ImageView
        android:id="@+id/iv_close_guest_list"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/close_guest_list"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"/>
    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="100dp">


        <RelativeLayout
            android:id="@+id/rl_invited_bubble"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/xml_circle_white_blue_border">

            <TextView
                android:id="@+id/tv_invited_bubble_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:textSize="28dp"
                android:textColor="#4A8FE3"
                android:textStyle="bold"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_invited_label"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Invited"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textStyle="normal"
            />

        <RelativeLayout
            android:id="@+id/rl_accepted_bubble"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/xml_circle_light_grey">

            <TextView
                android:id="@+id/tv_accepted_bubble_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:textSize="28sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textStyle="bold"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_accepted_label"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Accepted"
            android:textColor="#d3d3d3"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            />

        <RelativeLayout
            android:id="@+id/rl_declined_bubble"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/xml_circle_light_grey">

            <TextView
                android:id="@+id/tv_declined_bubble_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:textSize="28sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_declined_label"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Declined"
            android:textColor="#d3d3d3"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            />

    </LinearLayout>
</RelativeLayout>
