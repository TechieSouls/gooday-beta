<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:background="@color/transparent">
    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF979797"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
<com.daimajia.swipe.SwipeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:tag="Bottom2"
            android:background="@color/red"
            android:layout_width="60dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <TextView
                android:id="@+id/trash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="@color/white"/>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/event_row_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:divider="@color/transparent"
        android:orientation="vertical">
        <View
            android:id="@+id/event_bar"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="2dp"
            android:background="@color/cenes_new_orange"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/transparent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:padding="5dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/xml_gradient_border_transparentbg"
                    android:padding="3dp">

                    <com.deploy.util.RoundedImageView
                        android:id="@+id/iv_owner"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/profile_icon" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:padding="5dp">

                <com.deploy.util.CenesTextView
                    android:id="@+id/event_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="Seahawks at Rams"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.deploy.util.CenesTextView
                    android:id="@+id/event_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/location_pin"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="Seahawks at Rams"
                    android:textColor="#FF9B9B9B"
                    android:textSize="16sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="1:25PM"
                />
        </LinearLayout>
    </LinearLayout>
    </com.daimajia.swipe.SwipeLayout>
    <LinearLayout
        android:id="@+id/ll_reminder_row_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">

        <com.deploy.util.CenesTextView
            android:id="@+id/tv_reminder_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="3"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/solid_circle_orange"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:padding="10dp"
            android:textColor="@color/cenes_dark_gray"
            android:textSize="17sp"
            app:fontName="@string/font_lato_regular" />

        <com.deploy.util.CenesTextView
            android:id="@+id/tv_reminder_time"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/cenes_dark_gray"
            app:fontName="@string/font_lato_regular" />

    </LinearLayout>

</LinearLayout>
