<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="30dp"
    android:paddingTop="20dp">

    <ImageButton
        android:id="@+id/ibDeleteAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="-15dp"
        android:background="@color/transparent"
        android:padding="15dp"
        android:src="@drawable/minus_red"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_alarm_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.deploy.util.CenesTextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="07:00"
                android:textColor="@color/black"
                android:textSize="50sp"
                app:fontName="@string/font_lato_regular" />

            <com.deploy.util.CenesTextView
                android:id="@+id/tv_repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="M T W T F"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:fontName="@string/font_lato_regular" />

            <com.deploy.util.CenesTextView
                android:id="@+id/tv_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wake up"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:fontName="@string/font_lato_regular" />
        </LinearLayout>

        <Switch
            android:id="@+id/switch_onoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:padding="10dp" />

        <com.deploy.util.CenesTextView
            android:id="@+id/tvDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawableEnd="@drawable/ios_forward_arrow"
            android:padding="10dp"
            android:text="Delete"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:textStyle="normal"
            android:visibility="gone"
            app:fontName="@string/font_lato_regular" />

    </RelativeLayout>
</LinearLayout>