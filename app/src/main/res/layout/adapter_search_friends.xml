<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/invite_friend_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F9F9F9">

    <LinearLayout
        android:id="@+id/ll_invite_frnd_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <RelativeLayout
            android:id="@+id/rv_cenes_layout"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/iv_host_circle_member"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/host_gradient_circle_small"
                android:visibility="gone"/>


            <com.cenesbeta.util.RoundedImageView
                android:id="@+id/invite_friend_picture"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_pic_no_image"
                android:visibility="visible"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rv_non_cenes_layout"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:visibility="visible"
            android:background="@drawable/xml_circle_grey_white_border">

            <ImageView
                android:id="@+id/iv_host_circle"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/host_gradient_circle_small"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_non_cenes_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AS"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:fontFamily="@font/avenir_medium"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/invite_friend_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Mandeep"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/avenir_medium"/>
                <TextView
                    android:id="@+id/tv_friend_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+91 8437375294"
                    android:layout_marginStart="10dp"
                    android:textSize="14dp"
                    android:fontFamily="@font/avenir_medium"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginTop="10dp"
                    android:background="#CCC"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
