<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/invite_friend_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <com.cenes.util.RoundedImageView
        android:id="@+id/invite_friend_picture"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_profile_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/invite_friend_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="asdfghjk"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/invite_friend_name_cenes_user_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="I am using CENES"
                android:visibility="gone"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/iv_cenes_member_icon"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="INVITE"
            android:padding="5px"
            android:textSize="8sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:visibility="gone"
            android:background="@drawable/invite_to_cenes_btn"/>
    </LinearLayout>

</LinearLayout>
