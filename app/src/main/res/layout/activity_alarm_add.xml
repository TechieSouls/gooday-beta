<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_alarm_options_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient_header"
        android:visibility="gone">

        <com.deploy.util.CenesTextView
            android:id="@+id/alarm_options_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Back"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:fontName="@string/font_lato_regular" />

        <com.deploy.util.CenesTextView
            android:id="@+id/alarm_options_screen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="New Alarm"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:fontName="@string/font_lato_regular" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_alarm_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient_header">

        <com.deploy.util.CenesTextView
            android:id="@+id/add_alarm_screen_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:fontName="@string/font_lato_regular" />

        <com.deploy.util.CenesTextView
            android:id="@+id/add_alarm_screen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="New Alarm"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:fontName="@string/font_lato_regular" />

        <com.deploy.util.CenesTextView
            android:id="@+id/add_alarm_screen_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:fontName="@string/font_lato_regular" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/add_alarm_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_alarm_header"
        android:gravity="center"
        android:orientation="vertical">

        <com.deploy.util.CenesTextView
            android:id="@+id/alarm_time_picker_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_et_white_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/cenes_new_orange"
            android:textSize="60sp"
            app:fontName="@string/font_lato_regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/repeat_alarm_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:padding="10dp">

                <com.deploy.util.CenesTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Repeat"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:fontName="@string/font_lato_regular" />

                <com.deploy.util.CenesTextView
                    android:id="@+id/tv_repeat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/ios_forward_arrow"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:fontName="@string/font_lato_regular" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/label_alarm_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <com.deploy.util.CenesTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Label"
                    android:textColor="@color/black"
                    app:fontName="@string/font_lato_regular" />

                <com.deploy.util.CenesTextView
                    android:id="@+id/tv_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/ios_forward_arrow"
                    android:gravity="end"
                    android:textColor="@color/black"
                    app:fontName="@string/font_lato_regular" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sound_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <com.deploy.util.CenesTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sound"
                    android:textColor="@color/black"
                    app:fontName="@string/font_lato_regular" />

                <com.deploy.util.CenesTextView
                    android:id="@+id/tv_sound"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="15dp"
                    android:text="Default"
                    android:drawableRight="@drawable/ios_forward_arrow"
                    android:gravity="end"
                    android:textColor="@color/black"
                    app:fontName="@string/font_lato_regular" />
            </LinearLayout>
        </LinearLayout>

        <com.deploy.util.CenesTextView
            android:id="@+id/tv_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:background="@drawable/rounded_et_white_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="Delete"
            android:textColor="@color/red"
            android:visibility="invisible" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/repeat_alarm_list_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_alarm_options_header"
        android:visibility="gone">

        <ListView
            android:id="@+id/repeat_alarm_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp" />
    </RelativeLayout>

    <!-- EDIT TEXT ALARM LABEL -->
    <RelativeLayout
        android:id="@+id/rl_et_label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_alarm_options_header"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <com.deploy.util.CenesEditText
            android:id="@+id/et_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_et_white_bg"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/close"
            android:hint="Enter Label for Alarm"
            android:imeOptions="actionDone"
            android:inputType="textCapSentences"
            android:padding="8dp"
            android:text="@string/alarm"
            app:fontName="@string/font_lato_regular" />
    </RelativeLayout>

</RelativeLayout>
