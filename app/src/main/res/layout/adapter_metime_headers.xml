<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lblListHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/plus_black"
        android:drawablePadding="10dp"
        android:gravity="center_vertical|start"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Bedtime"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cenes_light_gray" />

    <RelativeLayout
        android:id="@+id/me_time_picker_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/me_time_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/me_time_categories"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <Button
                android:id="@+id/metime_sun_text"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/round_button_outline"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:text="S"
                android:textColor="@color/cenes_dark_gray" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/metime_mon_text"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/round_button_outline"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:text="M"
                android:textColor="@color/cenes_dark_gray" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/metime_tue_text"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/round_button_outline"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:text="T"
                android:textColor="@color/cenes_dark_gray" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/metime_wed_text"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/round_button_outline"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:text="W"
                android:textColor="@color/cenes_dark_gray" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/metime_thu_text"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/round_button_outline"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:text="T"
                android:textColor="@color/cenes_dark_gray" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/metime_fri_text"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/round_button_outline"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:text="F"
                android:textColor="@color/cenes_dark_gray" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/metime_sat_text"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/round_button_outline"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:text="S"
                android:textColor="@color/cenes_dark_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/date_time_picker_labels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/me_time_days"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/date_time_picker_start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/start_time_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start"
                    android:textColor="@color/cenes_dark_gray"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/start_time_label"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/metime_start_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border_radius"
                        android:gravity="center_vertical|end"
                        android:paddingEnd="5dp"
                        android:textColor="@color/black"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/metime_start_ampm"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/border_radius"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="AM"
                        android:textColor="@color/black" />
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/date_time_picker_end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/end_time_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End"
                    android:textColor="@color/cenes_dark_gray"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/end_time_label"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/metime_end_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border_radius"
                        android:gravity="center_vertical|end"
                        android:paddingEnd="5dp"
                        android:textColor="@color/black"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/metime_end_ampm"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/border_radius"
                        android:gravity="center_vertical|end"
                        android:padding="7dp"
                        android:text="PM"
                        android:textColor="@color/black" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>