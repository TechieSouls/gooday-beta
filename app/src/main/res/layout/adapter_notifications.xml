<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.cenes.util.RoundedImageView
            android:id="@+id/notification_sender_profile_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="12dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/notification_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_mesasge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/cenes_dark_gray" />

            <TextView
                android:id="@+id/notifcation_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/cenes_light_gray" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
