<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@color/cenes_light_blue"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/xml_circle_white">

                <com.cenesbeta.util.RoundedImageView
                    android:id="@+id/rv_profile_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/profile_pic_no_image" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_profile_name"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_gravity="center_horizontal"
                android:maxLines="2"
                android:text="Mandeep Singh"
                android:textSize="12dp"
                android:gravity="center_horizontal"
                android:textColor="@color/white"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
